<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="jumbotron">
    <div class="container-flex" style="padding-top:45px;">

    <!-- Page title -->
    <h1 class="xlarge-font" style="text-align: center;"><b>Add Business <span style="color:MediumSeaGreen;">Contact</span></b></h1>
    <hr class="my-3"><br>

    <div class="row">
        <div class="offset-md-2 col-md-8">

            <!-- page form -->
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter full name"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="contactNumberTextField">Contact Number</label>
                    <input type="tel" class="form-control"
                    id="contactNumberTextField" 
                    name="number" 
                    placeholder="Enter contact number"
                    pattern="[(7|8|9)\d{9}" required>
                </div>
        
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter email address"
                    name="email" required>
                </div><br>

                <button class="btn btn-success" type="submit" style="margin-right: 10px;">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/business-list" class="btn btn-danger" style="margin-right: 10px;">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>

</div>

